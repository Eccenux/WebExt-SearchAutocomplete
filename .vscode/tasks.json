{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"group": "build",
			"type": "gulp",
			"task": "build",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"group": "build",
			"type": "gulp",
			"task": "watch",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"group": "build",
			"type": "gulp",
			"task": "package",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"group": "build",
			"type": "gulp",
			"task": "clean",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		// Adding a shortcut:
		// 1. Preferences -> Keyboard Shortcuts (CTRL+K,S)
		// 2. Find: Run Test Task
		// 3. ALT+F6 (or whatever you want)
		{
			"label": "run tests",
			"type": "shell",
			"command": "./scripts/test.sh",
			"windows": {
				"command": ".\\scripts\\test.cmd"
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}