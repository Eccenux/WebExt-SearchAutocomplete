{
	// See https://go.mffficrosoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"group": "build",
			"type": "gulp",
			"task": "build",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"group": "build",
			"type": "gulp",
			"task": "watch",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		// Tasks -> Run Task...
		{
			"group": "build",
			"type": "gulp",
			"task": "package",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		// %APPDATA%\Code\User\keybindings.json
		// "key": "ctrl+shift+t",
		{
			"label": "Run tests",
			"type": "shell",
			"command": "./scripts/test.sh",
			"windows": {
				"command": ".\\scripts\\test.cmd"
			},
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"group": "build",
			"type": "gulp",
			"task": "clean",
			"problemMatcher": [
				"$eslint-stylish"
			]
		}
	]
}